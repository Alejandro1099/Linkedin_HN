<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos sanitarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- DNI, PESO, ALTURA, TIPO_SANGRE, ALERGIAS, ENFERMEDADES_CRONICAS, MEDICAMENTOS-->
    <%- include("partials/_header") %> <!-- include(carpeta/nombreArchivo) -->
        <h1>Formulario de informacion sanitaria</h1>
        <!-- form -->
        <div class="container">
            <form action="/addSalud" method="POST">
                <div class="row mt-3">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Nº de Identidad</label>
                            <input type="text" class="form-control" name="dni" id="exampleFormControlInput1"
                                placeholder="Nº Identidad" pattern="\d*" maxlength="13" required>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Peso en libras</label>
                            <input type="number" class="form-control" name="peso" id="exampleFormControlInput2"
                                placeholder="Peso en libras">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Altura</label>
                            <input type="number" class="form-control" name="altura" id="exampleFormControlInput2"
                                placeholder="Altura ej. 1.78">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Tipo de sangre</label>
                            <select name="tipoSangre" id="tipo_sangre">
                                <option value="" selected disabled hidden>Seleccione</option>
                                <option value="A+">A positivo</option>
                                <option value="A-">A negativo</option>
                                <option value="B+">B positivo</option>
                                <option value="B-">B negativo</option>
                                <option value="AB+">AB positivo</option>
                                <option value="AB-">AB negativo</option>
                                <option value="O+">O positivo</option>
                                <option value="O-">O negativo</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Alergias</label>
                            <input type="text" class="form-control" name="alergias" id="exampleFormControlInput2"
                                placeholder="Alergias">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Enfermedades cronicas</label>
                            <input type="text" class="form-control" name="eCronicas" id="exampleFormControlInput2"
                                placeholder="Enfermedades cronicas">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Medicamentos</label>
                            <input type="text" class="form-control" name="medicamentos" id="exampleFormControlInput2"
                                placeholder="Medicamentos">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Guardar datos
                </button>
            </form>
        </div>
        <!-- End form -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>