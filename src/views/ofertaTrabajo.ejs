<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oferta de trabajo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include("partials/_header") %> <!-- include(carpeta/nombreArchivo) -->
    
    <!-- form -->
    <div class="container">
        <h2 class="h1 mt-3 text-center">FORMULARIO DE OFERTA DE TRABAJO</h2>
        <form action="/empresa/ofertaTrabajo" method="post">
            <div class="row mt-5">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Empresa ID</label>
                        <input type="text" class="form-control" name="empresaID" id="exampleFormControlInput1"
                            placeholder="Empresa ID" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Descripcion del trabajo</label>
                        <input type="text" class="form-control" name="descripcion" id="exampleFormControlInput2"
                            placeholder="descripcion" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Requisito academico</label>
                        <select name="req_academico" id="tipo_sangre">
                            <option value="Universitario">Universidad completa</option>
                            <option value="Secundaria completa">Secundaria completa</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Requisito legal</label>
                        <select name="req_legal" id="tipo_sangre">
                            <option value="Servicio militar">Servicio militar completo</option>
                            <option value="Servicio militar no completo">Servicio militar no completo</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Sueldo deseado</label>
                        <input type="text" class="form-control" name="sueldo" id="exampleFormControlInput1"
                            placeholder="Sueldo" maxlength="6" pattern="\d*" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Vacantes disponibles</label>
                        <input type="text" class="form-control" name="vacantes" id="exampleFormControlInput1"
                            placeholder="Vacantes disponibles" maxlength="3" pattern="\d*" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-5">
                Guardar datos
            </button>
        </form>
    </div>
    <!-- End form -->

    <%- include("partials/footer") %> <!-- include(carpeta/nombreArchivo) -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>
</html>