<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos Legales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include("partials/_header") %> <!-- include(carpeta/nombreArchivo) -->
    <!-- form -->
    <div class="container">
        <h2 class="h1 mt-3 text-center">FORMULARIO DE DATOS LEGALES</h2>
        <form action="/dataLegal" method="post">
            <div class="row mt-5">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">DNI de la persona</label>
                        <input type="text" class="form-control" name="dni" id="exampleFormControlInput1"
                            placeholder="DNI" pattern="\d*" maxlength="13" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Servicio militar</label>
                        <select name="servicioMilitar" id="tipo_sangre">
                            <option value="" selected disabled hidden>Seleccione</option>
                            <option value="Cumplido">Cumplido</option>
                            <option value="No Cumplido">No cumplido</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Antecedentes penales</label>
                        <input type="text" class="form-control" name="antecedentes" id="exampleFormControlInput2"
                            placeholder="Cuenta con antecedentes penales" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                Guardar datos
            </button>
        </form>
    </div>
    <!-- End form -->

    <%- include("partials/footer") %> <!-- include(carpeta/nombreArchivo) -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>
</html>