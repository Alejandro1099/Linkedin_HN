<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos personales</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <%- include("partials/_header") %> <!-- include(carpeta/nombreArchivo) -->
        <!-- form -->
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-7">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>ID_BD</th>
                                <th>Primer Nombre</th>
                                <th>Segundo Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data){ %>
                                <% for(var i = 0; i<data.length; i++){%>
                                    <tr>
                                        <td><%= (i + 1) %></td>
                                        <td><%= data[i].ID_IDENTIDAD %></td>
                                        <td><%= data[i].nombre1 %></td>
                                        <td><%= data[i].nombre2 %></td>
                                        <td>
                                            <a href="/delete/<%= data[i].ID_IDENTIDAD %>" class="btn btn-danger ">Eliminar</a>
                                            <a href="/update/<%= data[i].ID_IDENTIDAD %>" class="btn btn-warning">Actualizar</a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <form action="/add" method="post">
                <div class="row mt-3">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Primer Nombre</label>
                            <input type="text" class="form-control" name="pNombre" id="exampleFormControlInput1"
                                placeholder="Primer Nombre">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Segundo Nombre</label>
                            <input type="text" class="form-control" name="sNombre" id="exampleFormControlInput2"
                                placeholder="Segundo Nombre">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Guardar datos
                </button>
            </form>
        </div>
        <!-- End form -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>